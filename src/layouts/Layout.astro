---
import '../assets/styles/bootstrap.min.css';
import '../assets/styles/global.css';
import '../assets/styles/fancybox.min.css';
import '../assets/styles/lineicons.css';
import '../assets/styles/odometer.min.css';
import '../assets/styles/swiper.min.css';

import Footer from '../components/layout/Footer.astro';
import Navigation from '../components/layout/Navigation.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

		<!-- FAVICON FILES -->
		<link href="/apple-touch-icon-144-precomposed.png" rel="apple-touch-icon" sizes="144x144">
		<link href="/apple-touch-icon-114-precomposed.png" rel="apple-touch-icon" sizes="114x114">
		<link href="/apple-touch-icon-72-precomposed.png" rel="apple-touch-icon" sizes="72x72">
		<link href="/apple-touch-icon-57-precomposed.png" rel="apple-touch-icon">
		<link href="/favicon.png" rel="shortcut icon">

		<meta name="generator" content={Astro.generator} />
		<title>SANCAN | {title}</title>
	</head>
	<body>
		<div class="first-transition"></div>
		<!-- end first-transition -->
		<div class="page-transition"></div>
		<!-- end page-transition -->

		<Navigation />
		<slot />
		<Footer />

		<script is:inline src="/js/jquery.min.js"></script> 
		<script is:inline src="/js/bootstrap.min.js"></script> 
		<script is:inline src="/js/swiper.min.js"></script> 
		<script is:inline src="/js/fancybox.min.js"></script> 
		<script is:inline src="/js/odometer.min.js"></script> 
		<script is:inline src="/js/isotope.min.js"></script> 
		<script is:inline src="/js/scripts.js"></script>
	</body>
</html>
