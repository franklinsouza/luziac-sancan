---
  const  { idempreendimento, sendTo, subject } = Astro.props;
---  
<section class="content-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-5">
        <div class="text-left section-title">
          <h6>Quer saber mais?</h6>
          <h2>Fale com um especialista agora mesmo</h2>
          <p>Preencha o formul√°rio e receba atendimento personalizado no WhatsApp.</p>
        </div>
        <!-- end section-title --> 
      </div>
      <!-- end col-6 -->
      <div class="col-lg-7">
        <form class="mb-0 contact-form">
          <input type="hidden" name="send" value={sendTo} />
          {idempreendimento && <input type="hidden" name="idempreendimento" value={idempreendimento} />}
          {subject && <input type="hidden" name="subject" value={subject} />}
          <div class="form-group">
            <span>Nome *</span>
            <input type="text" name="nome">
          </div>
          <div class="form-group">
            <span>E-mail *</span>
            <input type="email" name="email">
          </div>
          <div class="form-group">
            <span>Whatsapp *</span>
            <input type="text" name="telefone">
          </div>

          <div class="form-group">
            <button type="submit" data-type="contact">
              ENVIAR
            </button>
            <div class="form-group status"></div>  
          </div>

          <div class="form-group">
            <div class="form-msg"></div>
          </div>
          
        </form>
      </div>
    </div>
  </div>
</section>